<%= render 'shared/title', title: @gallery.title %>

<% @gallery.frames.each do |frame| %>
   <div class="well col-md-6">
      <p><h4><u><%= frame.name %></u></h4></p>
      <%= image_tag frame.image_url(:thumb) if frame.image? %>
    </div>
<% end %>

<div class="col-md-7 well">
  <%= form_for [@gallery, @frame], :html => {:multipart => true} do |f| %>

    <div class="form-group ">
      <label>Name</label>
      <p><%= f.text_field :name, :placeholder => "name", class: "form-control" %></p>
    </div>

    <div class="form-group ">
      <label>Image</label>
      <p><%= f.file_field :image %></p>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>