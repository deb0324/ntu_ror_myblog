<%= render 'shared/title', title: 'Sign up'%>
<div role="form" style="width: 700px;">
  <%= form_for(@user) do |f| %>
    <div class="form-group">
      <label>Username</label>
      <p><%= f.text_field :username, :placeholder => "username", class: "form-control" %></p>
    </div>

    <div class="form-group">
      <label>Nickname</label>
      <p><%= f.text_field :nickname, :placeholder => "nickname", class: "form-control" %></p>
    </div>

    <div class="form-group">
    <label>Password</label>
    <p><%= f.password_field :password, :placeholder => "password", class: "form-control" %></p>
    </div>

    <%= f.submit class: "btn btn-primary" %>

  <% end %>
</div>