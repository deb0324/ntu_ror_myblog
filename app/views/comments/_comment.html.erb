<div class="col-md-7 well">
  <p><%= auto_link(simple_format(comment.content)) %></p>
  <p><small><%= comment.created_at.strftime("%b %d, %Y")%> by 
  <% if comment.user != nil %>
    <%= link_to comment.user[:nickname], user_path(comment.user) %></small></p>
  <% end %>

  <p>
    <%= link_to vote_post_comment_path(post, comment, vote: true), class: "btn btn-warning", method: 'post' do %>Like
    <% end %>
    <span class="btn">
      <%= comment.total_votes %> Votes  
    </span> 
    <%= link_to vote_post_comment_path(post, comment, vote: false), class: "btn btn-warning", method: 'post' do %>Dislike 
    <% end %>
      
  </p>
</div>