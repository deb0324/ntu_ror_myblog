<%= render 'shared/title', title: 'New Post'%>

<div class="well col-md-12" role="form" style="width: 700px;">
  <%= form_for @post do |f| %>


    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, :placeholder => "title", class: "form-control" %>
    </div>


    <div class="form-group">
      <label>Content</label>
      <%= f.text_area :content, rows: 5, :placeholder => "content", class: "form-control" %>

    </div>

    <div class="form-group">
      <%= f.label :categories %>
      <%= f.text_field :categories, :placeholder => "categories", class: "form-control" %>

    </div>

